<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl"
    android:background="#1A1A1D"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <View
        android:id="@+id/view"
        android:layout_width="413dp"
        android:layout_height="70dp"
        android:background="@drawable/login_register_gradient"/>

    <TextView
        android:id="@+id/settings"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_baseline_settings_24"
        android:fontFamily="@font/roboto_slab"
        android:paddingLeft="16dp"
        android:textAlignment="center"
        android:textColor="#4E4E50"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/heading"
        android:layout_width="240dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center|top"
        android:fontFamily="@font/roboto_slab"
        android:text="HOME"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="79dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:layout_gravity="top|right"
        app:srcCompat="@drawable/icon2"
        app:tint="@color/white" />


    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:background="@drawable/roundedcorner"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_remove_24">

        </ImageView>


        <LinearLayout
            android:id="@+id/ll1"
            style="?android:attr/buttonBarStyle"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/roundfragnav"
            android:backgroundTint="#1a1a1D"
            android:orientation="horizontal"
            android:padding="1dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:background="@drawable/login_register_button"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/ic_baseline_chat_24_white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/groups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:background="@drawable/inactivebutton"
                android:paddingTop="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:drawableTop="@drawable/ic_baseline_group_24_white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:background="@drawable/inactivebutton"
                android:paddingTop="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:drawableTop="@drawable/ic_baseline_explore_24_white" />
        </LinearLayout>

        <ListView
            android:id="@+id/ll3"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="100dp" />

    </FrameLayout>

    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_slab"
            android:text="Status:  This feature is yet under development"
            android:textAlignment="center"
            android:textColor="#4E4E50"
            android:textSize="15dp"
            android:textStyle="bold"/>


    </HorizontalScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>

