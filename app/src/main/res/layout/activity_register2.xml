<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A1A1D">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginBottom="501dp"
            android:background="@drawable/login_register_gradient"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="118dp"
            android:layout_height="36dp"
            android:fontFamily="@font/roboto_slab"
            android:text="REGISTER"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.945"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/icon2"
            app:tint="@color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

        <EditText
            android:id="@+id/otp"
            android:layout_width="351dp"
            android:layout_height="61dp"
            android:layout_marginTop="68dp"
            android:background="@drawable/login_register_design"
            android:drawableLeft="@drawable/ic_baseline_verified_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/roboto_slab"
            android:hint="OTP"
            android:includeFontPadding="false"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textColorHint="#4E4E50"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="355dp"
            android:layout_height="89dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/roboto_slab"
            android:text="You are only a couple of steps away from successful registration. Enter the verification code you have received to continue "
            android:textAlignment="center"
            android:textColor="#4E4E50"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cntnue"
            android:layout_width="326dp"
            android:layout_height="64dp"
            android:background="@drawable/login_register_button"
            android:fontFamily="@font/roboto_slab"
            android:text="CONTINUE"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>